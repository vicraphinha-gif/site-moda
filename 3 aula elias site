  <script>
    const produtos = [
      {
        nome: "Camiseta Oversized",
        preco: 129.90,
        imagem: "https://images.unsplash.com/photo-1523381210434-271e8be1f52b"
      },
      {
        nome: "Moletom Street",
        preco: 249.90,
        imagem: "https://images.unsplash.com/photo-1602810316498-ab67cf68c8e1"
      },
      {
        nome: "Boné Snapback",
        preco: 99.90,
        imagem: "https://images.unsplash.com/photo-1593032465175-481ac7f401a0"
      }
    ];

    const container = document.getElementById('produtos');

    produtos.forEach(produto => {
      const card = document.createElement('div');
      card.className = 'card';

      card.innerHTML = `
        <img src="${produto.imagem}" alt="${produto.nome}">
        <h3>${produto.nome}</h3>
        <p>R$ ${produto.preco.toFixed(2)}</p>
        <button onclick="comprar('${produto.nome}')">Comprar</button>
      `;

      container.appendChild(card);
    });

    function comprar(nome) {
      alert(`Você adicionou ${nome} ao carrinho!`);
    }
  </script>
